news(){
    h2{
        text-align center
        font-size $con4
        color $select
        background  $primary
        // padding .2rem;
        height $titH;
        line-height $titH
        width 100%
      }

    ul {
      padding: 0 0.2rem;
    li {
      display: flex;
      padding .25rem 0
      font-size: $con4;
      border-bottom 1px solid #e0e0e0
      p {
        flex: 1;
        line-height 1.3em
      }
      
      .pic {
        width: 1.3rem;
        height: 1rem;
        margin-left .25rem;
        img {
            width 100%;
            height 100%
        }
      }
    }
  }
}
pinglun(){
  h2 {
    border-bottom: 0.01rem solid #e0e0e0;
    padding: 0.2rem;
    font-size: $con4;
    overflow: hidden;

    .iconfont {
      float: right;
      font-size: $con3;
      color: $info;
    }
  }

  .pinglun_con {
    display: flex;
    padding: 0.2rem;
    border-bottom: 0.01rem solid #e0e0e0;

    .pic {
      width: 0.5rem;
      height: 0.5rem;
      border-radius: 50%;
      overflow: hidden;

      img {
        width: 100%;
        height: 100%;
      }
    }

    .pinglun_text {
      flex: 1;
      margin-left: 0.2rem;

      .iconfont {
        font-size: $con3;
        color: $select;

        i {
          padding: 0 0.1rem;
        }
      }

      .pinglun_tit {
        overflow: hidden;

        h3 {
          float: left;
          font-size: $con5;
          margin: 0.1rem 0 0;
        }

        .iconfont {
          float: right;
          margin: 0.1rem 0 0;
          font-size: $con5;
          color: #666;
        }
      }

      p {
        margin: 0.2rem 0 0.3rem;
        font-size: $con5;
        color: #333;
        line-height: 1.2em;
        padding-right: 0.3rem;
      }
    }
  }
}